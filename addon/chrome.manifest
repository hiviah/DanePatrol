overlay chrome://pippki/content/certManager.xul chrome://certpatrol/content/certManager.xul

# Mobile (Fennec)
override chrome://certpatrol/content/prefs.xul chrome://certpatrol/content/prefs-mobile.xul application={a23983c0-fd0e-11dc-95ff-0800200c9a66}

# Thunderbird, Mozilla Mail
overlay chrome://messenger/content/messenger.xul chrome://certpatrol/content/overlay.xul

# SeaMonkey
overlay chrome://navigator/content/navigator.xul chrome://certpatrol/content/overlay.xul

# Songbird
overlay chrome://songbird/content/xul/mainScriptsOverlay.xul chrome://certpatrol/content/overlay.xul

